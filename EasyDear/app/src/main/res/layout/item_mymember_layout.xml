<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/line"
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp">

        <ImageView
            android:id="@+id/mymember_business_logo"
            android:layout_width="80dip"
            android:layout_height="60dip"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/car"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mymember_level"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/mymember_business_logo"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mymember_business_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignTop="@id/mymember_business_logo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/mymember_level"
            android:layout_toRightOf="@id/mymember_business_logo"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/mymember_credit"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mymember_business_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/arrow_right"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mymember_card_amount"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:layout_below="@id/mymember_business_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/mymember_credit"
            android:layout_toRightOf="@id/mymember_business_logo"
            android:textColor="@color/gray"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>