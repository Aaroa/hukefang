<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yunwei.easyDear.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/mine_user_nick_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="LEO"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="设置"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

<!--                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">-->

                    <ImageView
                        android:id="@+id/mine_user_headview_iv"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_below="@id/mine_user_nick_tv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@mipmap/homepage_headimg_defaut" />

<!--                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dip"
                        android:gravity="center"
                        android:text="设置"
                        android:textColor="@color/white"
                        android:textSize="16sp" />-->
              <!--  </LinearLayout>-->
                <RelativeLayout
                    android:id="@+id/mine_consumer_coupon_container"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/mine_user_headview_iv"
                    android:layout_alignTop="@id/mine_user_headview_iv"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp">
                    
                    <ImageView
                        android:id="@+id/mine_consumer_coupon_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/mine_consumer_coupon_text"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_toRightOf="@id/mine_consumer_coupon_iv"
                        android:text="消费券"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/mine_consumer_coupon_text"
                        android:layout_toRightOf="@id/mine_consumer_coupon_iv"
                        android:text="8"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_equity_merchant_container"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_toRightOf="@id/mine_consumer_coupon_container"
                    android:layout_alignTop="@id/mine_user_headview_iv"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/mine_equity_merchant_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/mine_equity_merchant_text"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_toRightOf="@id/mine_equity_merchant_iv"
                        android:text="权益商家"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/mine_equity_merchant_text"
                        android:layout_toRightOf="@id/mine_equity_merchant_iv"
                        android:text="21"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </com.yunwei.easyDear.view.ReboundScrollView>
</LinearLayout>