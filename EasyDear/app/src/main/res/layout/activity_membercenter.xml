<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/member_center_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商家会员"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/member_center_user_headview"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/homepage_headimg_defaut" />

        <TextView
            android:id="@+id/member_center_level"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/member_center_user_headview"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/member_center_user_headview"
            android:gravity="center"
            android:padding="5dp"
            android:text="V3"
            android:textColor="@color/bright_red"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/member_center_my_growth"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:text="我的成长值: 42169" />

        <RelativeLayout
            android:id="@+id/member_center_growth_progress_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/member_center_my_growth"
            android:layout_toRightOf="@id/member_center_user_headview" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/member_center_growth_progress_container"
            android:gravity="center_vertical|right"
            android:padding="5dp"
            android:text="+7873成长值就能尊享特权了哦！" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/member_center_card_in_business"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/result_points"
            android:gravity="center"
            android:padding="5dp"
            android:text="券3张"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/member_center_growth_value_text"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="成长值"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/member_center_growth_value"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/member_center_growth_value_text"
            android:layout_toRightOf="@id/member_center_growth_value_text"
            android:gravity="center_vertical"
            android:text="42169"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/member_center_consume_sum_text"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/member_center_growth_value_text"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="消费金额"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/member_center_consume_sum"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/member_center_consume_sum_text"
            android:layout_toRightOf="@id/member_center_consume_sum_text"
            android:gravity="center_vertical"
            android:text="2300.00"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/member_center_consume_times_text"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/member_center_consume_sum_text"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="消费次数"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/member_center_consume_times"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/member_center_consume_times_text"
            android:layout_toRightOf="@id/member_center_consume_times_text"
            android:gravity="center_vertical"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/member_center_grade_text"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/member_center_consume_times_text"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="积分数"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/member_center_grade"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/member_center_grade_text"
            android:layout_toRightOf="@id/member_center_grade_text"
            android:gravity="center_vertical"
            android:text="2300"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/member_center_level_rule_text"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@id/member_center_grade_text"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="会员等级规则"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/member_center_level_rule"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/member_center_back_to_business"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/bright_red"
        android:text="返回商家首页"
        android:textColor="@color/white"
        android:textSize="17sp" />

</LinearLayout>