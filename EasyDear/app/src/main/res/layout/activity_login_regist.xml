<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/loginRegist_finsh_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@mipmap/close_circle_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/loginRegist_login_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dip"
                android:text="登录"
                android:textColor="@color/gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/loginRegist_login_line"
                android:layout_width="match_parent"
                android:layout_height="4dip"
                android:background="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loginRegist_regist_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dip"
                android:text="注册"
                android:textColor="@color/gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/loginRegist_regist_line"
                android:layout_width="match_parent"
                android:layout_height="4dip"
                android:background="@color/gray"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/loginRegistActivity_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>