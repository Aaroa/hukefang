<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/line"
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/item_message_head_imageView"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/mem_starbck"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_message_time_textView"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:text="上午8:12"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_message_type_textView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignTop="@id/item_message_time_textView"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/item_message_time_textView"
            android:layout_toRightOf="@id/item_message_head_imageView"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="消费券信息"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_message_content_textView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_message_type_textView"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/item_message_head_imageView"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:text="您有5张一点点奶茶消费券入账，立即查看>>"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>